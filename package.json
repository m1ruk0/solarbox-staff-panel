{
  "name": "solarbox-staff-panel",
  "version": "1.0.6",
  "description": "SolarBox - Панель управления персоналом",
  "main": "electron-main.js",
  "scripts": {
    "start": "node index.js",
    "api": "node api-server-supabase.js",
    "api-sheets": "node api-server.js",
    "api-mongo": "node api-server-mongo.js",
    "dev": "node index.js & node api-server-supabase.js",
    "test-supabase": "node test-supabase-connection.js",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build-portable": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.solarbox.staffpanel",
    "productName": "SolarBox",
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "SolarBox",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SolarBox Staff Panel",
      "artifactName": "SolarBox-Setup-${version}.exe"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "m1ruk0",
      "repo": "solarbox-staff-panel",
      "private": false
    }
  },
  "keywords": [
    "discord",
    "bot",
    "applications",
    "staff",
    "management"
  ],
  "author": "SolarBox",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "googleapis": "^128.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
